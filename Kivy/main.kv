<MainWindow>:            #creates the first window
    name: "main"

    GridLayout:
        cols:1

        GridLayout:
            cols: 2
            row: 1
            
            Label:
                size: 50, 50
                text: "Password: "

            TextInput:
                id: passw
                multiline: False

        Button:
            text: "Submit"
            on_release:
                app.root.current = "second" if passw.text == "ian" else "main"
                root.manager.transition.direction = "left"

 


<SecondWindow>:                     # this creates the new window
