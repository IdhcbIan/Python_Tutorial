#Filename: my.kv

<MyGrid>:

    name: name
    email: email

    GridLayout:
        cols:1                          # change the widget size // And the root widget is the entire aplication
        size: root.width, root.height   # Makes the size the full window

        GridLayout:
            cols:2
            size: 50, 50

            Label:
                text: "Name: "
                 #//  secong row

            TextInput:
                id: name
                multinline:False
                
            Label:
                text: "Email: "

            TextInput:
                id: email               #creates the id of the input // email

                multiline:False

        Button:
            text:"Submit"                  # Calls the methos of the class in .py file btn()
            on_press:root.btn()            #the root widget is my grid , so this references a method of the root
        
        


     








